<div class="max-w-md mx-auto bg-white shadow-md rounded-lg p-6">
  <p class="text-xl text-cyan-800 tracking-wide leading-5 md:leading-6">
    <%= @contact.name %>
  </p>

  <p class="text-sm text-gray-500 leading-5 md:leading-6">
    <%= @contact.email %>
  </p>

  <p class="text-sm text-gray-500 leading-5 md:leading-6 mb-4">
    <%= @contact.phone %>
  </p>

  <div class="flex justify-between">
    <%= link_to 'Edit', edit_contact_path(@contact), class: 'bg-cyan-500 text-white py-2 px-4 rounded' %>
    <%= link_to 'Back', contacts_path, class: 'bg-gray-500 text-white py-2 px-4 rounded' %>
  </div>
</div>
